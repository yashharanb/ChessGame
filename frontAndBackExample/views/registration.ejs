<div class="row mt-5">
	<div class="col-md-6 m-auto">
		<div class="card card-body">
			<!-- <h1 class="text-center mb-3"><i class="fas fa-user-plus"></i> Register</h1> -->
			<img src="../logo.png" alt="logo"> <!-- using the "app.use(express.static("public"));" from app.js-->
			<h2>Create Account</h2>
			<form action="/users/registration" method="POST">
				<div class="form-group">
					<label for="email">Email</label>
					<input
						type="email"
						id="email"
						name="email"
						class="form-control"
						placeholder="Email"
						value="<%= typeof email != 'undefined' ? email : '' %>"
					/>
				</div>
				<div class="form-group">
					<label for="name">Username</label>
					<input
						type="username"
						id="username"
						name="username"
						class="form-control"
						placeholder="Username"
						value="<%= typeof username != 'undefined' ? username : '' %>" 
					/>
				</div>
				<div class="form-group">
					<label for="password">Password</label>
					<input
						type="password"
						id="password"
						name="password"
						class="form-control"
						placeholder="Password"
						value="<%= typeof password != 'undefined' ? password : '' %>"
					/>
				</div>
				<div class="form-group">
					<label for="password2">Confirm Password</label>
					<input
						type="password"
						id="password2"
						name="password2"
						class="form-control"
						placeholder="Confirm Password"
						value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
					/>
				</div>
				<button type="submit" class="btn btn-primary btn-block">Register</button>
			</form>
			<p class="lead mt-4"><a href="/">Sign in to Chess on the Go instead</a></p>
			<%- include('partials/messages') %>
		</div>
	</div>
</div>